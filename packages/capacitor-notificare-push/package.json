{
  "name": "capacitor-notificare-push",
  "version": "3.0.0-beta.2",
  "description": "Notificare Push Capacitor plugin.",
  "author": "Notificare <info@notifica.re> (https://notificare.com)",
  "license": "MIT",
  "homepage": "https://github.com/notificare/notificare-sdk-ionic-native#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Notificare/notificare-sdk-ionic-native.git"
  },
  "bugs": {
    "url": "https://github.com/Notificare/notificare-sdk-ionic-native/issues"
  },
  "keywords": [
    "notificare",
    "ionic-native",
    "capacitor",
    "ios",
    "android"
  ],
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "CapacitorNotificarePush.podspec"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "eslint . --ext ts,js",
    "lint:fix": "yarn run lint:eslint --fix",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^3.0.0",
    "@capacitor/core": "^3.0.0",
    "@capacitor/docgen": "^0.0.18",
    "@capacitor/ios": "^3.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "@capacitor/core": "^3.0.0"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
